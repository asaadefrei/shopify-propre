      width: 100%;
      margin: 12px 16px;
      justify-content: space-between;

      }

      .section-custom-pas-un-pli .section-1 {
   justify-content: space-between;
      display: flex;

      }

      .section-custom-pas-un-pli .section-2 {
    justify-content: space-between;
      display: flex;
      align-items: center; /* Align items vertically in the center */

      }

      .section-custom-pas-un-pli .div-button {
        font-size: 0;
        justify-content: flex-end;
        display: flex;
        
      }

      .section-custom-pas-un-pli .link-block {
        padding-left: 5px;
      }

      .section-custom-pas-un-pli .cercle {
        border: 1px solid #000;
        border-radius: 20px;


      }
 
    

