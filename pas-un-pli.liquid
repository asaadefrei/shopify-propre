      .section-custom-pas-un-pli .main-flexbox {
        display: flex;
        height: 688px;
        object-fit: contain;


      }

      .section-custom-pas-un-pli .sub-flexbox {
        flex: 1;
        display: flex;
        flex-direction: column;
        object-fit: contain;

      }

