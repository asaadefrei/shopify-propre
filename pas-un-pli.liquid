        height: 100%;
        width: 100%;
        object-fit: cover ;        

      }


      .section-custom-pas-un-pli .sub-flexbox-image>.centered-content {
        text-align: center;
        font-size: 32px;
        line-height: 35.5px;
        padding-right: 10%;
        padding-left: 10%;

      }

      .section-custom-pas-un-pli .button-decouvrez {
        position: absolute;
        top: 530px;
        left: 24px;
        bot: 24px;
        width: auto;
        /* Ajoutez la largeur souhaitée lorsqu'il est survolé */
        color: #fff;
        background-color: rgba(255, 255, 255, .17);
        border: 1px solid #fff;
        padding: 12px 24px;
        text-align: center;
        transition: border-color 0.3s;
        box-sizing: border-box;
        text-decoration: none;
        /* Enlève le soulignement */
        font-size: 1.75rem;

      }

      .section-custom-pas-un-pli .button-decouvrez:hover {
        border: 2px solid #fff;

      }

      .section-custom-pas-un-pli .sub-flexbox-item {
      display: flex;
      height: 88px;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      align-content: center;
      object-fit:contain;
      }



      .section-custom-pas-un-pli .sub-flexbox-item .div-element {
    max-height: 100%;
